{% spaceless %}
<media id="{{ entity.id }}">
  <source>{{ entity.source }}</source>
  <referencePrefix>{{ entity.referencePrefix }}</referencePrefix>
  <reference>{{ entity.reference }}</reference>
  <extension>{{ entity.extension }}</extension>
  <providerservicename>{{ entity.providerServiceName }}</providerservicename>
  <name>{{ entity.name }}</name>
  <description>{{ entity.description }}</description>
  <size>{{ entity.size }}</size>
  <mimetype>{{ entity.mimeType }}</mimetype>
  <enabled>{{ entity.enabled }}</enabled>
  <createdat>{{ entity.createdAt|date('c') }}</createdat>
  <metadata>
    {% for k,v in entity.metadata %}
      <{{ k }}>{{ v }}</{{ k }}>
    {% endfor %}
  </metadata>
</media>
{% endspaceless %}

